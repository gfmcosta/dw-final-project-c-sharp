@page
@model RegisterModel
@{
    ViewData["Title"] = "Registar";
}

<h1>@ViewData["Title"]</h1>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
    <h2>Criar uma nova conta.</h2>
    <div class="row">
        <hr />
        <div class="col-md-6">


            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Input.Person.name" class="control-label"></label>
                <input asp-for="Input.Person.name" class="form-control" />
                <span asp-validation-for="Input.Person.name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.phoneNumber" class="control-label"></label>
                <input asp-for="Input.Person.phoneNumber" class="form-control" />
                <span asp-validation-for="Input.Person.phoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.address" class="control-label"></label>
                <input asp-for="Input.Person.address" class="form-control" />
                <span asp-validation-for="Input.Person.address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.postalCode" class="control-label"></label>
                <input asp-for="Input.Person.postalCode" class="form-control" />
                <span asp-validation-for="Input.Person.postalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.dataNasc" class="control-label"></label>
                <input asp-for="Input.Person.dataNasc" class="form-control" type="date" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="Input.Person.dataNasc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.gender" class="control-label"></label>
                <div>
                    <label>
                        <input asp-for="Input.Person.gender" type="radio" value="M" /> Masculino
                    </label>
                    <label>
                        <input asp-for="Input.Person.gender" type="radio" value="F" /> Feminino
                    </label>
                </div>
                <span asp-validation-for="Input.Person.gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Person.imagePath" class="control-label"></label>
                <input name="imageFile" class="form-control" type="file" accept="image/*" />
                <span asp-validation-for="Input.Person.imagePath" class="text-danger"></span>
            </div>

        </div>
    </div>
    <div class="row">
        <hr />
        <div class="col-md-4">
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registar</button>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

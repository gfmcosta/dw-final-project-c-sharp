@{
    Layout = "header.cshtml";
}

@{
    var products = ViewBag.Products as List<Product>;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page</title>
    <link rel="stylesheet" href="ProdutosPage.css">
</head>

<body>
    <div style="width: 60%; position: relative; left: 50%; transform: translate(-50%); margin-bottom: 20px;">
        <select class="my-4" style="margin-top: 2% !important; width: 100%; height: 35px;">
            <option value="">Todas as Épocas</option>
            <option value="2">Verão</option>
            <option value="1">Primavera</option>
            <option value="3">Outono</option>
        </select>
    </div>
    <div style="display: grid; justify-content: center; grid-template-columns: 0.25fr 0.25fr 0.25fr 0.25fr;
      grid-template-rows: repeat(auto, 2fr); gap: 20px 20px; margin-bottom: 30%; width: 60%; left:50%; transform: translate(-50%); position: absolute;">
        
            @foreach (var product in products)
            {
                <div style="border: 0.5px solid grey; border-radius: 5px;">
                <a asp-controller="Home" asp-action="ProdutoInfo" asp-route-id="@product.id">
                        <img src="https://static.bershka.net/4/photos2/2023/V/0/1/p/0496/538/505/173d444fbaa583a28d1b832b4edc0e0c-0496538505_2_3_0.jpg?imwidth=850&amp;impolicy=bershka-itxmedium&amp;imformat=generic"
                             class="card-image" style="max-width: 100%; height: auto; object-fit: cover; align-self: center;">
                    </a>
                    <div class="d-flex flex-column justify-content-between" style="text-align: left;">
                            <div>
                                <h5 class="card-title" style="font: message-box; cursor: pointer; margin-top: 5px!important;">@product.name</h5>
                                <p class="card-description">@product.description</p>
                                <p class="card-price">@product.price €</p>
                    
                            </div>
                
                    </div>
                </div>
            }
       

    </div>
</body>
</html>
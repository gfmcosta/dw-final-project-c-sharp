@{
    Layout = "header.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link rel="stylesheet" href="ProductDetails.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>

<body>
    <div class="container" style="margin-top: 5%; left: 5%; position: relative;">
        <div class="row" style="min-width: 1200px;">
            <div class="col-md-6">
                <img src="https://static.bershka.net/4/photos2/2023/V/0/1/p/0496/538/505/173d444fbaa583a28d1b832b4edc0e0c-0496538505_2_3_0.jpg?imwidth=850&amp;impolicy=bershka-itxmedium&amp;imformat=generic"
                     alt="Product" class="img-fluid" style="width: 100%;">
            </div>
            <div class="col-md-6" style="text-align: left; margin-left: 5%; max-width: 35%;">
                <h2>Product Name</h2>
                <h4>10€</h4><br>
                <p>Cor</p>
                <div class="col-md-6" style="max-width: 200px;">
                    <img src="https://static.bershka.net/4/photos2/2023/V/0/1/p/0496/538/505/173d444fbaa583a28d1b832b4edc0e0c-0496538505_2_3_0.jpg?imwidth=850&amp;impolicy=bershka-itxmedium&amp;imformat=generic"
                         alt="Product" class="img-fluid" style="width: 40%; cursor: pointer; border: 2px solid black;">
                </div><br>
                <div class="input-group my-4">
                    <input type="number" min="1" max="10" value="" class="form-control">
                    <div class="input-group-append">
                        <span class="input-group-text">Quantidade</span>
                    </div>
                </div>
                <p>Tamanhos</p>
                <div style="display: grid; justify-content: center; grid-template-columns: 1fr 1fr 1fr; grid-template-rows: 2fr; gap: 20px 20px;">
                    <button class="button-size">S</button>
                    <button class="button-size">M</button>
                    <button class="button-size">L</button>
                </div>
                <br><br>
                <button class="add-button" style="width: 100%;">
                    <i class="mr-2"></i>Adicionar
                </button>
                </div>
            </div>
        </div>
        <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
    </div>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>

</html>

@{
    Layout = "~/Views/App/header.cshtml";
}

@{
    var product = ViewBag.Products;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Details</title>
    <link rel="stylesheet" href="ProductDetails.css">
</head>

<body>
    <div class="container" style="margin-top: 3%; left: 5%; position: relative;">
        <div class="row" style="min-width: 1200px;">
            <form asp-controller="Home" asp-action="AddCart" method="post">
            <div class="col-md-6" style="float: left; max-width: 40%; margin-left: 10%;">
                    <img src="http://localhost:5072/images/@product.imagePath"
                     alt="Product" class="img-fluid" style="width: 100%;">
            </div>
            <div class="col-md-6" style="text-align: left; max-width: 35%; float: left; margin-left: 100px;">
                <h2>@product.name</h2>
                <h4>@product.price€</h4><br>
                <p>Cor</p>
                <div class="col-md-6" style="max-width: 200px; margin-bottom: 40px; padding-left: 0px!important;">
                        <img src="http://localhost:5072/images/@product.imagePath"
                         alt="Product" class="img-fluid" style="width: 40%; cursor: pointer; border: 2px solid black;">
                </div><br>
                <div class="input-group my-4">
                    <input type="number" min="1" max="10" value="" class="form-control">
                    <div class="input-group-append">
                        <span class="input-group-text">Quantidade</span>
                    </div>
                </div>
                <p>Tamanhos</p>
                <div style="display: grid; justify-content: center; grid-template-columns: 1fr 1fr 1fr; grid-template-rows: 2fr; gap: 20px 20px;">
                        <button type="submit" name="size" class="button-size">S</button>
                        <button type="submit" name="size" class="button-size">M</button>
                        <button type="submit" name="size" class="button-size">L</button>
                </div>
                <br><br>
                    <button type="submit" class="add-button" style="width: 100%;" name="submitAction" value="Adicionar">
                    <i class="mr-2"></i>Adicionar
                </button>
                </div>
            </form>
            </div>
        </div>
        <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
</body>

</html>

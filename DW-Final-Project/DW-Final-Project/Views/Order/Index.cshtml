@model IEnumerable<DW_Final_Project.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Pedidos</h1>

<p>
    <a asp-controller="Order" asp-action="Create">Criar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IVA)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Person)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IVA)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.date)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.name)
            </td>
            <td>
                    <a asp-controller="Order" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                    <a asp-controller="Order" asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                    <a asp-controller="Order" asp-action="Delete" asp-route-id="@item.id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>

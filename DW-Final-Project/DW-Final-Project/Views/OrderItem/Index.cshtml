@model IEnumerable<DW_Final_Project.Models.OrderItem>

@{
    ViewData["Title"] = "Index";
}

<h1>Artigos</h1>

<p>
    <a asp-controller="OrderItem" asp-action="Create">Criar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.totalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.order)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.product)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.size)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.totalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.order.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.product.description)
            </td>
            <td>
                <a asp-controller="OrderItem" asp-action="Edit" asp-route-id="@item.id">Editar</a> |
                    <a asp-controller="OrderItem" asp-action="Details" asp-route-id="@item.id">Detalhes</a> |
                    <a asp-controller="OrderItem" asp-action="Delete" asp-route-id="@item.id">Apagar</a>
            </td>
        </tr>
}
    </tbody>
</table>
